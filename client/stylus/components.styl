#menu
    position: fixed
    width: 200px
    height: 100%
    background-color: indigo

.card
    float: left
    col(1/4, cycle: 4)
    max-width: 33%
    height: auto
    margin: 15px
    background-color: cardBackground
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26)
    border-radius: 2px
    +below(1200px)
        col(1/3, uncycle: 4, cycle: 3)
    +below(900px)
        col(1/2, uncycle: 3, cycle: 2)
    +below(600px)
        stack()
    .image-container
        .image
            width: 100%
            height: auto
    .info-container, .action-container
        padding: 10px
    .info-container
        width: 100%
        height: auto
        .title, .hashtag-container, .hashtag
            display: inline-block
            vertical-align: middle
        .title
            margin-right: 10px
            font-weight: 400
        .hashtag-container
            width: 200px
            font-size: .75em
            .hashtag
                margin-right: 5px
                color: medGrey
    .action-container
        border-top: 1px solid lightGrey
        cf()
        .action-wrapper
            float: left
            .action
                display: inline-block
                margin-right: 10px
                vertical-align: middle
        .like-container
            float: right
            .number, .heart
                display: inline-block
                vertical-align: middle
            .heart
                font-size: 1.5em
            .number
                margin-left: 3px
