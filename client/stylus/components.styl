//Responsive
#menu
    position: fixed
    top: 0
    left: 0
    span(1)
    height: 80px
    background-color: indigo
    +below(414px)
        height: 56px
        box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26)
    .hamburger, .search
        position: absolute
        line-height: 80px
        font-size: 1.5em
        color: darkIndigo
        +below(414px)
            line-height: 56px
    .hamburger
        left: 15px
    .search
        right: 15px
    .search-left
        left: 15px
        right: 0

.search-container
    position: absolute
    left: 50px
    width: 50%
    height: 30px
    margin-right: 5px
    line-height: 80px
    +below(414px)
        line-height: 56px
    input[type=text]#search-field
        width: 100%
        background-color: transparent
        color: white
        outline: none
        border: none
        visibility: visible

.card-container
    span(1)
    margin-top: 80px
    +below(414px)
        margin-top: 56px
.center-wrapper
    center()
    padding-left: 20px
    padding-right: 20px

.card
    col(1/3, cycle: 3)
    height: auto
    max-width: 400px
    margin-top: 15px
    margin-bottom: 15px
    background-color: cardBackground
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26)
    border-radius: 2px
    +below(1024px)
        col(1/2, uncycle: 3, cycle: 2)
    +below(600px)
        stack()
    .image-container
        .image
            width: 100%
            height: auto
    .info-container, .action-container
        padding: 10px
    .info-container
        .title, .hashtag-container, .hashtag
            display: inline-block
            vertical-align: middle
        .title
            margin-right: 10px
            font-weight: 400
        .hashtag-container
            font-size: .75em
            .hashtag
                margin-right: 5px
                color: medGrey
    .action-container
        border-top: 1px solid lightGrey
        cf()
        .action-wrapper
            float: left
            .action
                display: inline-block
                margin-right: 10px
                vertical-align: middle
        .like-container
            float: right
            .number, .heart
                display: inline-block
                vertical-align: middle
            .heart
                font-size: 1.5em
            .number
                margin-left: 3px
