html {
    box-sizing: border-box;
}
*, *:before, *:after {
    box-sizing: inherit;
}

html, body
    height: 100%
    background-color: background
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
    font-weight: 300
    color: darkGrey

a
    text-decoration: none

.main-content
    height: 100%
    width: auto

//Classes to append for extra styling
.ellipsis
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap

//Easy Addition of Colors
.pink
    color: pink
.dark-grey
    color: darkGrey
.white
    color: white
